<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="300"
            fx:controller="org.example.householdledger.Controller.loginController"
            style="-fx-background-color: #f5f5f5;">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300">
        <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <TextField fx:id="userName" promptText="Username"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10;" />

        <PasswordField fx:id="userPassword" promptText="Password"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10;" />

        <Button fx:id="loginButton" text="Login"
        onAction="#login"

                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" />

        <Label text="Don't have an account? Sign up"
               onMouseClicked="#goToSignUp"
               style="-fx-text-fill: #2196F3; -fx-underline: true; -fx-cursor: hand;" />
    </VBox>
</AnchorPane>

